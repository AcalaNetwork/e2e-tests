{
	"name": "e2e-tests",
	"private": true,
	"scripts": {
		"lint": "tsc --noEmit && eslint . --ext .js,.ts && prettier --check .",
		"fix": "eslint . --ext .js,.ts --fix && prettier -w .",
		"prepare": "husky install",
		"test": "LOG_LEVEL=error vitest",
		"test:ui": "LOG_LEVEL=error vitest --ui",
		"update-env": "tsx scripts/update-env.ts"
	},
	"resolutions": {
		"@polkadot/api": "^10.11.2"
	},
	"dependencies": {
		"@acala-network/chopsticks": "^0.9.9",
		"@acala-network/chopsticks-testing": "^0.9.9",
		"@acala-network/sdk": "^4.1.9-13",
		"@acala-network/sdk-core": "^4.1.9-13",
		"@polkadot/api": "^10.11.2",
		"@polkawallet/bridge": "^0.1.5-31",
		"@swc/core": "^1.4.0",
		"axios": "^1.6.6",
		"dotenv": "^16.3.1",
		"lodash": "^4.17.21",
		"typescript": "^5.3.3",
		"unplugin-swc": "^1.4.4",
		"vitest": "^1.2.2"
	},
	"devDependencies": {
		"@types/lodash": "^4",
		"@types/node": "^20.9.4",
		"@typescript-eslint/eslint-plugin": "^6.12.0",
		"@typescript-eslint/parser": "^6.12.0",
		"@vitest/ui": "^1.2.1",
		"eslint": "^8.54.0",
		"eslint-config-prettier": "^9.0.0",
		"eslint-import-resolver-typescript": "^3.6.1",
		"eslint-plugin-import": "^2.29.0",
		"eslint-plugin-sort-imports-es6-autofix": "^0.6.0",
		"husky": "^8.0.3",
		"lint-staged": "^15.1.0",
		"prettier": "^3.1.0",
		"tsx": "^4.6.2"
	},
	"prettier": {
		"tabWidth": 2,
		"semi": false,
		"singleQuote": true
	},
	"lint-staged": {
		"*.ts": "eslint --cache --fix",
		"*.{ts,css}": "prettier --write"
	},
	"packageManager": "yarn@4.1.0"
}
