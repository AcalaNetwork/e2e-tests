		"test:dev": "vitest --inspect --single-thread",
		"update-env": "ts-node scripts/update-env.ts"
	},
	"resolutions": {
		"@polkadot/api": "^10.9.1"
	},
	"dependencies": {
		"@acala-network/chopsticks": "^0.8.5-2",
		"@acala-network/chopsticks-testing": "^0.8.5-2",
