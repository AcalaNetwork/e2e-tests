		"@acala-network/api": "^6.1.3",
		"@acala-network/sdk": "4.1.11",
		"@acala-network/sdk-core": "4.1.11"
	},
	"dependencies": {
		"@acala-network/chopsticks": "^1.0.5-1",
		"@acala-network/chopsticks-testing": "^1.0.5-1",
		"@acala-network/sdk": "4.1.11",
		"@acala-network/sdk-core": "4.1.11",
		"@polkadot/api": "12.4.2",
		"@polkadot/util": "13.0.2",
		"@polkawallet/bridge": "^0.1.7-13",
		"@swc/core": "^1.6.1",
		"axios": "^1.7.2",
		"dotenv": "^16.4.5",
